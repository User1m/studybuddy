<% @page_title = "User Login" %>

<h1> LOGIN</h1></br>
<div class="login">
  <%= form_tag(:action => 'attempt_login') do %>

<div class= "span3" id="biglogo">
	<%= image_tag("studybuddy.jpg") %>
</div>
<div class = "span4"></br></br>
  <table>
    <tr>
      <td><%= label_tag(:name) %></td>
      <td><%= text_field_tag(:name) %></td>
    </tr>
    <tr>
      <td><%= label_tag(:password) %></td>
      <td><%= password_field_tag(:password) %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag("Log In") %> &nbsp; <%= link_to("Create New User", {:controller => 'users', :action => 'new'}) %></td>   
    </tr>
  </table>
</div>
  <% end %>
</div>
